{
  "name": "@midwayjs/deno-mocha",
  "version": "1.2.0",
  "description": "Run your existing mocha tests with Deno.",
  "bin": "bin/deno-mocha",
  "files": [
    "bin",
    "build",
    "mods"
  ],
  "repository": {
    "url": "https://github.com/midwayjs/deno-mocha"
  },
  "scripts": {
    "build": "esbuild --outdir=build --platform=node --format=cjs src/deno-mocha.ts",
    "prepare": "npm run build",
    "lint:fix": "deno fmt",
    "test": "mocha test/*.test.js"
  },
  "author": "The Midway Authors",
  "license": "MIT",
  "dependencies": {
    "arg": "^5.0.1",
    "esbuild": "^0.14.39",
    "fast-glob": "^3.2.11",
    "mustache": "^4.2.0"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/mustache": "^4.1.2",
    "@types/node": "^17.0.34",
    "mocha": "^10.0.0"
  }
}
